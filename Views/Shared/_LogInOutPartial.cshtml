@using Microsoft.AspNetCore.Identity
@using IdentityProject.Models.AppCustomEntities
@inject SignInManager<ApplicationUser> signInManager

@if (signInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <form method="post" asp-controller="Auth" asp-action="LogOut" asp-antiforgery="true">
            <button type="submit" class="btn btn-dark">Log Out</button>
        </form>
    </li>
}

else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Register">Register</a>
    </li>

    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="" asp-controller="Auth" asp-action="Login">Login</a>
    </li>
}
