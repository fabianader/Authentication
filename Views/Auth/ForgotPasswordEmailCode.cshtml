@model IdentityProject.Models.ViewModels.ForgotPasswordEmailCodeVM
@{
    ViewData["Title"] = "Forgot Password Email Code";
    // var ReturnUrl = ViewBag.ReturnUrl as string;
}
<center>
    <h1>Forgot Password Email Code</h1>

    <hr class="col-md-6" />

    <div class="row">
        <center>
            <div class="col-md-5">
                <form asp-action="ForgotPasswordEmailCode" asp-antiforgery="true" method="post">
                    <input type="hidden" asp-for="UserName"/>
                    <input type="hidden" asp-for="Token"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Code" class="control-label"></label>
                        <input asp-for="Code" class="form-control" />
                        <span asp-validation-for="Code" class="text-danger"></span>
                    </div><br />
                    
                    <div class="form-group">
                        <button type="submit" value="Go To Reset Password Page" class="btn btn-success">Go To Reset Password Page</button>
                    </div>
                </form>
            </div>
        </center>
    </div>
</center>
<div>
    <a asp-controller="Home" asp-action="Index">Back To Home</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}