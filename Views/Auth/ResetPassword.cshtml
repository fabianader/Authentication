@model IdentityProject.Models.ViewModels.ResetPasswordVM
@{
    ViewData["Title"] = "ResetPassword";
}
<center>
    <h1>ResetPassword</h1>

    <hr class="col-md-6" />

    <div class="row">
        <center>
            <div class="col-md-5">
                <form asp-action="ResetPassword" asp-antiforgery="true" method="post" asp-route-returnUrl="/Auth/EmailCodeB">
                    <input type="hidden" asp-for="UserName"/>
                    <input type="hidden" asp-for="Token"/>
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="NewPassword" class="control-label"></label>
                        <input asp-for="NewPassword" class="form-control" />
                        <span asp-validation-for="NewPassword" class="text-danger"></span>
                    </div><br />
                    <div class="form-group">
                        <label asp-for="ConfirmNewPassword" class="control-label"></label>
                        <input asp-for="ConfirmNewPassword" class="form-control" />
                        <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                    </div><br />

                    <div class="form-group">
                        <button type="submit" value="Reset Password" class="btn btn-success">Reset Password</button>
                    </div>
                </form>
            </div>
        </center>
    </div>
</center>
<div>
    <a asp-controller="Auth" asp-action="Login">Login</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}